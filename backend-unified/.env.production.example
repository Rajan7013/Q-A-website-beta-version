# Production Environment Variables Template
# Copy this to .env in production (Render, Railway, etc.)

# Server Configuration
NODE_ENV=production
PORT=10000
FRONTEND_URL=https://your-app.vercel.app

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# Clerk Authentication
CLERK_SECRET_KEY=sk_live_your_clerk_secret_key
CLERK_PUBLISHABLE_KEY=pk_live_your_clerk_publishable_key

# Supabase Database
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_supabase_service_key
SUPABASE_ANON_KEY=your_supabase_anon_key

# Cloudflare R2 Storage
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=your-bucket-name
R2_PUBLIC_URL=https://pub-xxxxx.r2.dev

# File Upload Configuration
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=pdf,docx,pptx,txt

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
GEMINI_RATE_LIMIT_WINDOW_MS=60000
GEMINI_RATE_LIMIT_MAX_REQUESTS=10
UPLOAD_RATE_LIMIT_WINDOW_MS=3600000
UPLOAD_RATE_LIMIT_MAX_REQUESTS=20

# Redis (Optional - for distributed rate limiting)
REDIS_URL=redis://default:password@host:port

# Security
LOG_LEVEL=info
